{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom"],
    "target": "es2020",
    "module": "es2020",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "outDir": "./dist/out-tsc",
    "paths": { "Ng2UiAuth": ["dist/ng2-ui-auth"] },
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["node_modules/@types"]
  },
  "angularCompilerOptions": {
    "enableIvy": true,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true,
    "compilationMode": "partial"
  },
  "exclude": ["bower_components", "node_modules", "wwwroot"]
}
